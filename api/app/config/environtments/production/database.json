{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "bookshelf",
      "settings": {
        "client": "postgres",
        "host": "${process.env.DATABASE_HOST || 'postgres'}",
        "port": "${process.env.DATABASE_PORT || 5432}",
        "database": "${process.env.DATABASE_NAME || plasmox}",
        "username": "${process.env.DATABASE_USERNAME || plasmox}",
        "password": "${process.env.DATABASE_PASSWORD || plasmox123}",
        "ssl": { "rejectUnauthorized": false }
      },
      "options": {}
    }
  }
}
